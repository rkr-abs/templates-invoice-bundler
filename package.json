{
  "name": "npm-bundler",
  "version": "1.0.0",
  "description": "simple components bundler.",
  "main": "index.js",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "link": "cd ./dist && npm link && cd ../",
    "copy": "cp ./package.json ./dist",
    "build": "webpack --mode production && npm run copy",
    "build-dev": "webpack --json > .stats.json && du -sh dist && npm run copy",
    "lint": "npx eslint .",
    "stats": "npx webpack-bundle-analyzer .stats.json",
    "test-ci": "npm run test-dev -- --coverage",
    "test-dev": "react-scripts test --watchAll=false"
  },
  "keywords": [
    "react",
    "components"
  ],
  "author": "nkg-abs",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@laufire/utils": "^3.0.0-0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "./src/index.js",
      "./src/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "restoreMocks": true
  }
}
